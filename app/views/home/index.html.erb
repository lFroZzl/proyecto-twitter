<div class="row">
    <% if user_signed_in? %>
        <%= render 'tweets/form', tweet: @tweet %>
    <% end %>
</div>


<div class="row">
    <% @tweets.each do |tweet| %>
        <%= render 'tweets/single_tweet', tweet: tweet %>
    <% end %>
    <hr/>
    <%= paginate @tweets, window: 1 %>
    <%= link_to_next_page @tweets, 'Mostrar mas' %>
</div>
